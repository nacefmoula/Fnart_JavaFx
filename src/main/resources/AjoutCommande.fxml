<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.AjoutCommandeController"
      spacing="10"
      alignment="CENTER"
      style="-fx-background-color: white; -fx-padding: 20;">

    <Label text="Finaliser la commande" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
    
    <VBox spacing="5">
        <Label text="Nom" style="-fx-font-weight: bold;"/>
        <TextField fx:id="nomField" promptText="Entrez votre nom"/>
    </VBox>
    
    <VBox spacing="5">
        <Label text="Prénom" style="-fx-font-weight: bold;"/>
        <TextField fx:id="prenomField" promptText="Entrez votre prénom"/>
    </VBox>
    
    <VBox spacing="5">
        <Label text="Adresse de livraison" style="-fx-font-weight: bold;"/>
        <TextField fx:id="addressField" promptText="Entrez votre adresse"/>
    </VBox>
    
    <VBox spacing="5">
        <Label text="Numéro de téléphone" style="-fx-font-weight: bold;"/>
        <TextField fx:id="phoneField" promptText="Entrez votre numéro"/>
    </VBox>
    
    <VBox spacing="5">
        <Label text="Email" style="-fx-font-weight: bold;"/>
        <TextField fx:id="emailField" promptText="Entrez votre email"/>
    </VBox>
    
    <Label fx:id="totalLabel" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="cancelButton" 
                text="Annuler"
                onAction="#handleCancel"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        <Button fx:id="confirmButton" 
                text="Confirmer"
                onAction="#handleConfirmation"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>

</VBox> 