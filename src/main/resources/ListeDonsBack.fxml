<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0"  stylesheets="@css/AdminDashboard.css" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.AdminDashboardController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         
         <!-- Title -->
         <Label text="Gestion des Dons">
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
         </Label>
         
         <!-- Search and Filter Controls -->

         
         <!-- List View -->
         <ListView fx:id="donsListView" prefHeight="400.0" prefWidth="700.0" ></ListView>

         <!-- Buttons -->
         <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="addButton" mnemonicParsing="false"  text="Ajouter un don" ></Button>

            <Button fx:id="backButton" mnemonicParsing="false"  text="Retour" ></Button>
         </HBox>
      </VBox>
   </children>
   
   <style>
      .button:hover {
          -fx-background-color: #2C3E50 !important;
      }
   </style>
</AnchorPane> 