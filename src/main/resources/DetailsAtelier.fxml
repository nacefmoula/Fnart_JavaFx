                            <graphic>
                                <Text text="ðŸ—‘" />
                            </graphic>
                        </Button>
                    </HBox>
                </VBox>
            </HBox>
            
            <!-- Bottom action bar -->
            <HBox spacing="15" alignment="CENTER" styleClass="card">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15" />
                </padding>
                <Button text="TÃ©lÃ©charger PDF" onAction="#downloadPdf" styleClass="button-accent">
                    <graphic>
